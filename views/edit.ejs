<%- include("partials/header") %>
<style>
.pcard
{
    background-color: #f1f1f1;
}

.profile-card
{
    width: 1000px;
    margin: auto;
    background: #fff;
    box-shadow: 0 4px 10px 0 rgba(0,0,0,0.5);
}

.image-container
{
    position: relative;
}

.info
{
    color: #4b4fe2;
    margin-right: 16px;
}

.main-container
{
    padding: 20px;
}
/* .list-bar
{
    background-color: #bdc9ea;
    border-radius: 16px;
} */
.itemlist
{
    padding: 0.1em 16px;
    border-radius: 16px;
    text-align: center;
    color: #fff;
    background-color: #D2D9DA;
}
</style>

<br><br><br><br>
<body class="pcard">
   
   
    <form  action="/profile/<%= edit._id %>/edit" method="POST" enctype="multipart/form-data" >
    <div class="profile-card">
    
        <div class="container image-container">
            <img  src= <%= "../uploadsuser/" + user.image %> style="width: 100%">
            <div class="main-container">
                 <form>
                    <div class="row" >
                      <div class="col" >
                        
                        <input type="text" class="form-control" placeholder="First name" value="<%= user.Name %>" required>
                      </div>
                      <div class="col">
                        <input type="text" class="form-control" placeholder="Last name" value="<%= user.Surename %>" required>
                      </div>
                    </div>
                  </form>
            </div>
            
            <hr>
    </div> 
    <div class="main-container">
        
         
          <form>
            <form>
              <div class="row user">
                <div class="col">
                  <input type="text" class="form-control" placeholder="บัตรประชาชน" value="<%= user.IDCard %>" required>
                </div>
                <div class="col">
                  <input type="text" class="form-control" placeholder="เบอร์โทรศัพท์" value="<%= user.Telephone %>" required>
                </div>
              </div>
            </form>
            <br>
            <form>
            <div class="row">
              <div class="col">
                <input type="text" class="form-control" placeholder="บ้านเลขที่" value="<%= user.Housenumber %>" required>
              </div>
              <div class="col">
                <input type="text" class="form-control" placeholder="ถนน" value="" required>
              </div>
            </div>
          </form>
          <br>
          <form>
            <div class="row">
              <div class="col">
                <input type="text" class="form-control" placeholder="แขวง/ตำบล" value="" required>
              </div>
              <div class="col">
                <input type="text" class="form-control" placeholder="เขต/อำเภอ" value="<%= user.District %>" required>
              </div>
            </div>
          </form>
          <br>
          <form>
            <div class="row">
              <div class="col">
                <input type="text" class="form-control" placeholder="จังหวัด" value="<%= user.Province %>" required>
              </div>
              <div class="col">
                <input type="text" class="form-control" placeholder="รหัสไปรษณีย์" value="<%= user.Postalcode %>" required>
              </div>
            </div>
          </form>
          <br>
        <p>เพศ</p>
        <p><select class="form-control" style="width: 10%;" value="<%= edit.Gender %>"  name="Gender" required >
            <option>Male</option>
            <option>Female</option>
            <option>Other</option>
        </select>
        </p>

        <hr>
        <p>Change Photo</p>
       
            <div class="from-grop">
                <input class="form-control" type="file" class="form-control" name="image" accept="image/*">
              </div>
              
         </div>
    
    </div> 
    <br>
    <div class="inputBox">
        <center><input type="submit" class="btn btn-dark" name="" value="Submit"></center>
      </div>
</div>
</form>
</body>

<%- include("partials/footer") %>