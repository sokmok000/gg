<%- include("partials/header") %>
<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
<link src="http://maxcdn.bootstrapcdn.com/font-awesome/5.0.0/css/font-awesome.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
<script src="https://kit.fontawesome.com/a81368914c.js"></script>
<body style="background-color: #273746;">
<div class="container">
    <header class="jumbotron"  style="background: url(nikebg.jpg); background-size:cover; width: 100%; height:300px ;" >
        <div class="container">
        
    </div>
    
</header>



<div class ="row"style="display:flex; flex-wrap:wrap;">
    <% nike.forEach(function(n){ %>
    <div class="col-md-4 col-sm-6" >
        
            <div class="card">
                    <div class="front"><img src = <%= "../uploadssneaker/" + n.Image[0].filename %> class="img-fluid" width = "300px" > </div>
                    <div class = "back">
                        <div class="details">
                            <h2> <%= n.Name %><br><span><%= n.Minidetail %></span></h2>
                            <p class="btn btn-secondary" style="text-align: center; font-size: 20px;"><a href=" /nike/<%= n._id %>/detail">Detail</a></p>
                            
                            <div><a href="/<%= n._id %>/<%= n.Namesneaker %>/buy" class="add-cart btn btn-secondary"><i class="fas fa-shopping-cart"></i> Buy Now</a></div>
                           
                            <div class="social-icons">
                                <a href="#"><i class="" aria-hidden="true"></i></a>
                            </div>
                        </div>
                    </div>
                
            </div>    
            <br><br>
          
    
    </div>
    <% }) %>

</div>
</body>

<script>
    let carts = document.querySelectorAll('.add-cart');
    for(let i=0; i < carts.length ; i++)
    {
        carts[i].addEventListener('click',() =>{
            console.log("Added to card");
            cartNumbers();
        });
    }
function onLoadCartNumbers() {
    let productNumbers = localStorage.getItem("cartNumbers");
    if(productNumbers){
        document.querySelector(".cart span").textContent = productNumbers;
    }
}
    function cartNumbers(){
        let productNumbers = localStorage.getItem("cartNumber");

        productNumbers = parseInt(productNumbers);
        if(productNumbers){
            localStorage.setItem("cartNumbers",productNumbers + 1);
            document.querySelector(".cart span").textContent = productNumbers + 1;
        }
        else{
            localStorage.setItem(".cartNumbers",1);
            document.querySelector(".cart span").textContent = 1 ;
        }
    }

    onLoadCartNumbers();
    </script>
    
<%- include("partials/footer") %>