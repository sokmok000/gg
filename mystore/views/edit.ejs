<%- include("partials/header") %>
<style>
.pcard
{
    background-color: #f1f1f1;
}

.profile-card
{
    width: 1000px;
    margin: auto;
    background: #fff;
    box-shadow: 0 4px 10px 0 rgba(0,0,0,0.5);
}

.image-container
{
    position: relative;
}

.info
{
    color: #4b4fe2;
    margin-right: 16px;
}

.main-container
{
    padding: 20px;
}
/* .list-bar
{
    background-color: #bdc9ea;
    border-radius: 16px;
} */
.itemlist
{
    padding: 0.1em 16px;
    border-radius: 16px;
    text-align: center;
    color: #fff;
    background-color: #D2D9DA;
}
</style>

<br><br><br><br>
<body class="pcard">
   
   
    <form  action="/profile/<%= edit._id %>/edit" method="POST" enctype="multipart/form-data" >
    <div class="profile-card">
    
    <div  class="image-container">
            <img src="blue.png" style="width: 100%">
            <div class="main-container">
                <p>Name</p>
                <p><input style="width: 600px;" type="text" name="Name" value="<%= edit.Name %>" required></p>
                <p>Surename</p>
                <p><input style="width: 600px;" type="text" name="Surename" value="<%= edit.Surename %>" required></p>
            </div>
            
            <hr>
    </div> 
    <div class="main-container">
        <p>บ้านเลขที่</p>
        <p><input style="width: 600px;"  type="text" name="Housenumber" placeholder="Address" value="<%= edit.Housenumber %>" required></p>
        <p>จังหวัด</p>
       <p><input style="width: 600px;" type="text" name="Province" placeholder="" value="<%= edit.Province %>" required> </p>
        <p>เขต</p>
        <p><input style="width: 600px;" type="text" name="District" placeholder="" value="<%= edit.District %>" required> </p>
        <p>รหัสไปรษณีย์</p>
        <p><input style="width: 600px;" type="text" name="Postalcode" placeholder="" value="<%= edit.Postalcode %>" required> </p>
        <p>บัตรประชาชน</p>
        <p><input style="width: 600px;" type="text" name="IDCard" placeholder="13 หลัก" value="<%= edit.IDCard %>" required> </p>
        <p>Tel.</p>
        <p><input style="width: 600px;" type="tel" name="Telephone" placeholder="085-xxxxxxx" value="<%= edit.Telephone %>" required> </p>
        <p>Size</p>
        <p><input style="width: 600px;" type="" name="Size" placeholder="" value="<%= edit.Size %>" required> </p>
        <p>เพศ</p>
        <p><select value="<%= edit.Gender %>"  name="Gender" required >
            <option>Male</option>
            <option>Female</option>
            <option>Other</option>
        </select>
        </p>

        <hr>
        <p>Change Photo</p>
       
            <div class="from-grop">
                <input type="file" class="form-control" name="image" accept="image/*">
              </div>
              
         </div>
    
    </div> 
    <div class="inputBox">
        <center><input type="submit" class="btn btn-dark" name="" value="Submit"></center>
      </div>
</div>
</form>
</body>

<%- include("partials/footer") %>